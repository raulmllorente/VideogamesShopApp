<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.VideogamesShopApp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideogamesShopApp">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="Aqui va la API key personal para Google Maps de Google Cloud Platform" />

        <activity android:name=".GameDetailNew"></activity>
        <activity android:name=".GameDetailPS4"></activity>
        <activity android:name=".GameDetailOfertas"></activity>
        <activity android:name=".GameDetailXbox"></activity>
        <activity android:name=".ListaCompraActivity"></activity>
        <activity android:name=".PagoActivity"></activity>
        <activity android:name=".ContactarActivity"></activity>
        <activity android:name=".ContactoActivity"></activity>
        <activity android:name=".ReclamarActivity"></activity>
        <activity android:name=".MapaActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>