<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PagoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/nameClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del cliente"/>

    <EditText
        android:id="@+id/addressClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero de telefono"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección Email"/>

    <CheckBox android:id="@+id/checkVisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa"/>

    <CheckBox android:id="@+id/checkMastercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MasterCard" />

    <Button
        android:id="@+id/buttonFinishShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terminar pago"/>
</LinearLayout>